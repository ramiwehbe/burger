
<div class="header">
    <h1>Burgers</h1>
</div>


<div class="container-wrapper">

    <div class="card left">
        <h3>Menu</h3>
        {{#each burgers}}
            {{#unless devoured}}
            <div class="burger-card">
                <div class="name">{{name}}</div>
                <div class="button"><button class="eat-burger" data-id="{{this.id}}">Devour It</button></div>
            </div>
            {{/unless}}
        {{/each}}
    </div>


    <div class="card center">
        <h3>Add Items</h3>
            <div class="form">
                <input type="text" id="new-burger" class="input">
                <button class="new-burger">Submit</button>
            </div>
    </div>



    <div class="card right">

        <h3>Ordered</h3>
        {{#each burgers}}
            {{#if devoured}}
            <div class="burger-card">
                {{name}}
            </div>
            {{/if}}
        {{/each}}
    </div>
</div>